@model RedeSocial.Web.Models.Account.EditarAccountViewModel

@{ ViewData["Title"] = "Edit"; }
<h4>Foto de Perfil</h4>
<img class="img-thumbnail"
     src="https://redesocialverde.blob.core.windows.net/imagens/@(this.User.Claims.First(x => x.Type == System.Security.Claims.ClaimTypes.Name).Value)fotoperfil.jpg?size=30x30&bgset=bg1">

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtBirthday" class="control-label"></label>
                <input asp-for="DtBirthday" class="form-control" />
                <span asp-validation-for="DtBirthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h4>Trocar foto de perfil</h4>

@if (ViewBag.UrlGerada != null)
{
<img src="@ViewBag.UrlGerada" />}
<form asp-action="CreateFotoPerfil" asp-controller="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Arquivo</label>
        <input type="file" class="form-control" placeholder="file" name="file" id="file">
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

<div>
    <a asp-controller="Home" asp-action="Index">Voltar ao menu</a>
</div>


<td>
    <a asp-route-id="@Model.Id" asp-action="Delete">Deletar</a>
</td>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

